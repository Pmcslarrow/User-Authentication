</div>


<style>

    body {
        width: 99%;
    }


    #cartContent {
        width: 100px;
        height: 50px;
        transition: height 1s ease-in-out;
    }

    #cart {
        position: absolute;
        left: 95%;
        top: -55px;
        width: 0px;
        height: 25px;
    }
    

    li {
        display: inline-block;
        width: 80px;
        text-align: center;
        margin-top: 10px;
    }

    ul {
        list-style-type: none;
        margin: 0;
        padding: 0;
    }

    #signoutButton {
        border: none;
        margin: 0;
        margin-top: 10px;
        padding: 0;
        position: relative;
    }

    .button {
        background-color: #111; /* Green */
        border: none;
        color: #ccc;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        font-size: 25px;
        opacity: 0.9;
    }

    .button:hover {
        color: #fff;
    }

    .bigAndCentered {
        font-size: 30px;
        font-weight: bold;
        text-align: center;
    }

    #block1 {
        margin: 0;
        padding: 0;
        background-color: rgb(253, 237, 218);
        width: 100%;
        height: 500px;
        font-family:'Courier New', Courier, monospace;

    }

    #newCollection {
        color: rgb(247, 58, 1);
        position: relative;
        left: 50px;
        top: 150px;
        font-size: 15px;
    }

    #summerCollection {
        font-size:25px;
        position: relative;
        left: 50px;
        top: 165px;
    }

    #shopNow {
        font-size: 30px;
        position: relative;
        left: 50px;
        top: 190px;
        border: 1px solid black;
        background-color: black;
        color: white;
        width: 150px;
        padding: 5px;
    }

    #block1 a{
        text-decoration: none;
        color: white;
    }

    a {
        text-decoration: none;
        color: black;
    }

    .right {
        float: right;
    }

    #cart {
        position: relative;
        right: 100px;
    }

    #block2, #block3, #block4 {
        font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        padding: 0;
        margin: 0;
        margin-top: 10px;
        background-color: rgb(240, 236, 231);
        width: 32%;
        height: 300px;
        text-align: center;
        font-size: 25px;
        text-shadow: 1px 1px black;
    }

    #block2 {
        position:absolute;
        left: 10px;
        top: 700px;
    }
    #block3 {
        position:absolute;
        left: 34%;
        top: 700px;
    }
    #block4 {
        position:absolute;
        left: 67.5%;
        top: 700px;
    }

    #newCollectionImage {
        position: relative;
        left: calc(50% - 300px);
    }

    @media screen and (max-width: 1000px) {
        #newCollectionImage {
            position: relative;
            left: 50px;
            top: 100px;
        }
    }

    /* Scrolling animation */
    #scrollContent {
        padding: 0;
        margin: 0;
        position: absolute;
        width: 99%;
        height: 200px;
        left: 10px;
        top: 1000;
        transition: 100% 5s;
    }

    .scrollItem {
        position: relative;
        font-size: 20px;
        text-align: center;
        top: 12.5%;
        width: 200px;
        height: 150px;
        margin-left: 150px;
        border: 1px solid black;
        display: inline-block;
        animation: left-to-right 20s linear forwards infinite;
    }

    .scrollItem:hover { animation-play-state: paused;}

    #scrollContent img {
        width: 100px;
        height: 100px;
    }

    @keyframes left-to-right {
        0% {
            transform: translateX(-2000px);
        }

        100% {
            transform: translateX(1750px);
        }
    }
    

    /* SLIDING BAR ANIMATION */
    .nav{
	height: 100%;
	width: 0;
	position: fixed;
	z-index: 1;
	top: 0;
	left: 0;
	background-color: #111;
	opacity: .95;
	overflow-x: hidden;
	padding-top: 60px;
	transition: 0.7s;
    }

    .nav a {
        display: block;
        padding: 20px 30px;
        font-size: 25px;
        text-decoration: none;
        color: #ccc;
    }
    .nav a:hover {
        color: #fff;
        transition: 0.4s;
    }
    .nav .close {
        position: absolute;
        top: 0;
        right: 22px;
        margin-left: 50px;
        font-size: 30px
    }
    .slide a {
        color: #000;
        font-size: 36px;
    }
    #content {
        padding: 20px;
        transition: margin-left 0.7s;
        overflow: hidden;
        width: 100%;
    }

    #cartMenu {
        position: absolute;
        left: 100%;
    }

</style>

<script>

    function openSlideMenu(){
        document.getElementById('menu').style.width = '400px';
        document.getElementById('content').style.marginLeft = '400px';
    }

    function closeSlideMenu(){
        document.getElementById('menu').style.width = '0';
        document.getElementById('content').style.marginLeft = '0';
    }

    function hide() {
        let block1 = document.getElementById("block1");
        block1.style.visibility = "hidden";

    }

    function cartAction() {
        let cart = document.getElementById('cartContent');
        let img = document.getElementById("cart");
        let state = cart.getAttribute("data");
        if (state === "off")
        {
            cart.setAttribute("data", "on");
            img.style.left = "100px";
            cart.style.height = "400px";
            cart.style.width = "100%";
            cart.style.border = "1px solid black";
            setTimeout(hide, 1000);
    
        } else {
            cart.setAttribute("data", "off");
            cart.style.height = "0";
            cart.style.width = "0";
            cart.style.border = "0";
            block1.style.visibility = "visible";
        }
    }


</script>
